@using BlessDiamond.Data
@model IEnumerable<Sale>
<div class="container" style="margin-top:60px; ">
    <table style=" font-size:large;" class="table table-hover table-striped table-bordered">
        <tr style="font-size:medium;">
            <th> Sale Id</th>
            <th>Sale Date</th>
            <th>Buyer Info</th>
            <th>Product Info </th>
            <th>Edit and View  Sale</th>

            




        </tr>
        @foreach (Sale c in Model)
        {
            <tr>
                <td>@c.ProductId </td>
                <td>@c.DateOfSale</td>
                <td>@c.Buyer.BuyerName - @c.Buyer.PhoneNumber</td>
                <td> @c.Product.ProductName -$@c.Product.Price</td>
                <td>
                   <a href="/home/viewSale?id=@c.ProductId" class="btn btn-danger">Edit and View  Sale</a>



            </tr>
        }



    </table>
    <div class="modal" id="editmodal" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class=" modal-title"> Edit This Buyer  </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"></span>
                    </button>
                    <div class=" modal-body">
                        <form method="post" action="/home/editBuyer">
                            <h4> Name</h4>
                            <br />
                            <input type="text" name="BuyerName"  class="form-control" />
                            <h4> Phone Number </h4>
                            <br />

                            <input type="text" name="phonenumber"  />
                            <button class="btn btn-danger">Save</button>

                        </form>



                    </div>
                    <button class="btn btn-success" id="closeedit">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>



@section scripts {

    <script src="~/JavaScript.js"></script>
}
